<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.experiments.atomdesign.component.Separator
        android:id="@+id/top_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:separator_orientation="horizontal"
        app:separator_width="@dimen/dimen_8dp" />

    <com.example.experiments.atomdesign.component.TextView
        android:id="@+id/tv_nudge_complete_profile_title"

        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:ellipsize="end"
        android:lineHeight="@dimen/dimen_20dp"
        android:maxLines="1"
        android:textSize="@dimen/dimen_15sp"
        app:layout_constraintEnd_toStartOf="@id/iv_nudge_complete_profile_thumb_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_separator"
        tools:text="@tools:sample/lorem" />

    <com.example.experiments.atomdesign.component.TextView
        android:id="@+id/tv_nudge_complete_profile_description"

        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:lineHeight="@dimen/dimen_15dp"
        android:textColor="@color/color_grey_500"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintEnd_toStartOf="@id/iv_nudge_complete_profile_thumb_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nudge_complete_profile_title"
        tools:text="@tools:sample/lorem" />

    <com.example.experiments.atomdesign.component.Button
        android:id="@+id/btn_nudge_complete_profile_complete_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        app:atomButtonSize="wrapContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nudge_complete_profile_description"
        tools:textValue="Complete Now" />

    <com.example.experiments.atomdesign.component.ImageView
        android:id="@+id/iv_nudge_complete_profile_thumb_large"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="@dimen/dimen_90dp"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:layout_marginVertical="@dimen/dimen_16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>