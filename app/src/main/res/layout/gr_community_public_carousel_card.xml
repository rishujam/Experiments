<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_public_community"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_8dp"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_community_public_carousel_card"
        android:layout_width="@dimen/dimen_190dp"
        android:layout_height="@dimen/dimen_220dp">

        <com.example.experiments.atomdesign.component.RoundedImageView
            app:cornerRadius="@dimen/dimen_8dp"
            android:id="@+id/iv_community_public_carousel_card_banner"
            android:layout_width="@dimen/dimen_64dp"
            android:layout_height="@dimen/dimen_64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintStart_toStartOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintTop_toTopOf="@+id/ct_community_public_carousel_card" />

        <com.example.experiments.atomdesign.component.TextView
            android:id="@+id/tv_public_community_card_title"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/color_grey_700"
            android:textFontWeight="700"
            app:layout_constraintEnd_toEndOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintStart_toStartOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintTop_toBottomOf="@+id/iv_community_public_carousel_card_banner"
            tools:text="Caring 4 Cares” Mental Health" />

        <com.example.experiments.atomdesign.component.TextView
            android:id="@+id/tv_public_community_card_created_by"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/color_grey_500"
            android:textFontWeight="500"
            app:layout_constraintEnd_toEndOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintStart_toStartOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintTop_toBottomOf="@+id/tv_public_community_card_title"
            tools:text="Created by Anarina Layusa" />

        <com.example.experiments.atomdesign.component.Button
            android:id="@+id/btn_public_community_card_join_community"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:enabled="true"
            android:maxLines="1"
            app:buttonType="secondary"
            app:layout_constraintBottom_toBottomOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintEnd_toEndOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintStart_toStartOf="@+id/ct_community_public_carousel_card"
            app:layout_constraintTop_toBottomOf="@+id/tv_public_community_card_created_by"
            app:layout_constraintVertical_bias="1.0"
            tools:textValue="Request To Join" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>