<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Button">
        <attr name="textValue" format="string" />
        <attr name="drawableSrc" format="integer" />
        <attr name="drawableTint" format="color" />
        <attr name="isButtonEnabled" format="boolean" />
        <attr name="buttonType">
            <enum name="primary" value="1" />
            <enum name="secondary" value="2" />
        </attr>

        <attr name="atomButtonSize">
            <enum name="large" value="1" />
            <enum name="medium" value="2" />
            <enum name="small" value="3" />
            <enum name="smallExtended" value="4" />
            <enum name="wrapContent" value="5" />
            <enum name="smallWrapContent" value="6" />
        </attr>

        <attr name="drawableGravity">
            <enum name="start" value="1" />
            <enum name="end" value="2" />
        </attr>

    </declare-styleable>

    <declare-styleable name="FabButton">
        <attr name="fabTextValue" format="string" />
        <attr name="fabDrawableSrc" format="integer" />
        <attr name="isFabButtonEnabled" format="boolean" />
        <attr name="fabButtonType">
            <enum name="floating" value="1" />
            <enum name="floatingWithText" value="2" />
        </attr>
        <attr name="fabButtonSize">
            <enum name="largeFloating" value="1" />
            <enum name="midFloating" value="2" />
            <enum name="miniFloating" value="3" />
            <enum name="largeWithText" value="4" />
            <enum name="midWithText" value="5" />
            <enum name="miniWithText" value="6" />
        </attr>


    </declare-styleable>

    <declare-styleable name="Separator">
        <attr name="separator_width" format="dimension" />
        <attr name="separator_orientation" format="enum">
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RadioButton">
        <attr name="isRadioButtonEnabled" format="boolean" />
        <attr name="isRadioButtonSelected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NewRadioButton">
        <attr name="isNewRadioButtonEnabled" format="boolean" />
        <attr name="isNewRadioButtonSelected" format="boolean" />
        <attr name="radioButtonTitle" format="string" />
        <attr name="radioButtonSubTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="ProfileImageView">
        <attr name="piv_image_src" format="reference" />
        <attr name="piv_badge_image_src" format="reference" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LeaderboardImageView">
        <attr name="player_rank">
            <enum name="first" value="1" />
            <enum name="second" value="2" />
            <enum name="third" value="3" />
        </attr>
        <attr name="player_image_src" format="reference" />
        <attr name="player_title" format="string" />
        <attr name="player_subtitle" format="string" />
    </declare-styleable>

    <declare-styleable name="IndefinitePagerIndicator">
        <attr name="dotCount" format="integer" />
        <attr name="fadingDotCount" format="integer" />
        <attr name="dotRadius" format="dimension" />
        <attr name="selectedDotRadius" format="dimension" />
        <attr name="dotColor" format="color" />
        <attr name="selectedDotColor" format="color" />
        <attr name="dotSeparation" format="dimension" />
        <attr name="supportRTL" format="boolean" />
        <attr name="verticalSupport" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="ciBorderWidth" format="dimension" />
        <attr name="ciBorderColor" format="color" />
    </declare-styleable>

</resources>